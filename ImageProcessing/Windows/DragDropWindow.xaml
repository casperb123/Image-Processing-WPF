<mah:MetroWindow x:Class="ImageProcessing.Windows.DragDropWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:ImageProcessing.Windows"
                 xmlns:root="clr-namespace:ImageProcessing"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d"
                 Title="DragDropWindow"
                 Height="450"
                 Width="204"
                 AllowsTransparency="True"
                 IsHitTestVisible="False"
                 SizeToContent="WidthAndHeight"
                 Topmost="True"
                 ShowInTaskbar="False"
                 ShowTitleBar="False"
                 ShowCloseButton="False"
                 ShowMinButton="False"
                 ShowMaxRestoreButton="False"
                 BorderThickness="0"
                 Background="{x:Null}"
                 WindowTransitionsEnabled="False">
    <StackPanel x:Name="stackPanelButtons"
                root:Spacing.Vertical="5"
                IsHitTestVisible="False" />
</mah:MetroWindow>
