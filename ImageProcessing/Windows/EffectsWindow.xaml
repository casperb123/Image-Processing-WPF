                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    mah:SliderHelper.EnableMouseWheel="MouseHover"
                                    mah:SliderHelper.ChangeValueBy="SmallChange"
                                    TickFrequency="2"
                                    IsEnabled="{Binding Path=BoxBlur}"
                                    Value="{Binding Path=BoxBlurAmount}"
                                    Margin="0,0,5,0"
                                    Grid.Row="1" />
                            <mah:NumericUpDown x:Name="numericMeanBlurAmount"
                                               Minimum="3"
                                               Maximum="19"
                                               Interval="2"
                                               IsEnabled="{Binding Path=BoxBlurFilter}"
                                               Value="{Binding Path=BoxBlurAmount}"
                                               Margin="5,0,0,0"
                                               Grid.Row="1"
                                               Grid.Column="1" />
                        </Grid>
                    </GroupBox>

                    <GroupBox x:Name="groupBoxGaussianBlur"
                              Header="Gaussian Blur - Not applied"
                              IsEnabled="{Binding Path=BlurFilters}">
