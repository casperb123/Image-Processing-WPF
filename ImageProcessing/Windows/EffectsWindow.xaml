<mah:MetroWindow x:Class="ImageProcessing.Windows.EffectsWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:ImageProcessing.Windows"
                 xmlns:root="clr-namespace:ImageProcessing"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d"
                 Title="Image Effects"
                 Height="718"
                 Width="691"
                 SizeToContent="Height"
                 ResizeMode="NoResize"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                 Closing="MetroWindow_Closing">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Label Content="Effects"
               HorizontalContentAlignment="Center" />
        <Grid x:Name="gridEffects"
              Grid.Row="1"
              Background="Transparent"
              AllowDrop="True"
              DragOver="Effects_DragOver"
              Drop="Effects_Drop">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <StackPanel x:Name="stackPanelEffects"
                        root:Spacing.Vertical="5"
                        DragOver="Effects_DragOver"
                        Drop="Effects_Drop">
                <Button x:Name="buttonInvert"
                        Content="Invert"
                        PreviewMouseMove="Button_PreviewMouseMove" />
            </StackPanel>
        </Grid>

        <Label Content="Enabled Effects"
               HorizontalContentAlignment="Center"
               Grid.Column="1" />
        <Grid x:Name="gridEnabledEffects"
              Grid.Row="1"
              Grid.Column="1"
              AllowDrop="True"
              Background="Transparent"
              DragOver="Effects_DragOver"
              Drop="EnabledEffects_Drop">
            <StackPanel x:Name="stackPanelEnabledEffects"
                        root:Spacing.Vertical="5"
                        AllowDrop="True"
                        DragOver="Effects_DragOver"
                        Drop="EnabledEffects_Drop" />
        </Grid>
    </Grid>

