        <StackPanel Grid.Column="1"
                    Margin="2.5,0,0,0"
                    root:Spacing.Vertical="5">
            <GroupBox x:Name="groupBoxPixelate"
                      Header="Pixelate - Not applied">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
