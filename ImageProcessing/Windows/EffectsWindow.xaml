                            Maximum="15"
                            AutoToolTipPlacement="TopLeft"
                            AutoToolTipPrecision="0"
                            mah:SliderHelper.EnableMouseWheel="MouseHover"
                            mah:SliderHelper.ChangeValueBy="SmallChange"
                            IsMoveToPointEnabled="True"
                            SmallChange="2"
                            Grid.Row="1"
                            Value="{Binding Path=MedianSize}"
                            Margin="0,0,5,0"
                            IsEnabled="{Binding Path=Median}" />
                    <mah:NumericUpDown x:Name="numericMedianSize"
                                       Minimum="3"
                                       Maximum="15"
                                       Interval="2"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       Margin="5,0,0,0"
                                       Value="{Binding Path=MedianSize}"
                                       IsEnabled="{Binding Path=MedianFilter}" />
                </Grid>
            </GroupBox>

            <GroupBox Header="Blur Filters">
                <StackPanel root:Spacing.Vertical="5">
                    <GroupBox x:Name="groupBoxBoxBlur"
                              Header="Box Blur - Not applied"
                              IsEnabled="{Binding Path=BlurFilters}">
